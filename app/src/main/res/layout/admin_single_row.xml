<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardCornerRadius="3dp"
    card_view:cardElevation="4dp"
    card_view:cardMaxElevation="6dp">


   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/relativeId"
       android:orientation="horizontal"
       >
       <ImageView
           android:id="@+id/single_row_ImageView"
           android:layout_width="100dp"
           android:layout_height="100dp" />
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           >
           <TextView
               android:layout_marginTop="5dp"
               android:layout_width="140dp"
               android:layout_height="wrap_content"
               android:text="Farida Begum"
               android:id="@+id/single_row_nameText"
               />
           <TextView
               android:layout_width="140dp"
               android:layout_height="wrap_content"
               android:text="Disease Details"
               android:lines="3"
               android:layout_marginTop="30dp"
               android:id="@+id/single_rowDiseaseDetails"
               />
       </LinearLayout>
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           >
           <Button
               android:layout_width="wrap_content"
               android:layout_height="35dp"
               android:text="Approve"
               android:layout_marginLeft="20dp"
               android:id="@+id/approveId"
               />
           <Button
               android:layout_width="wrap_content"
               android:layout_height="35dp"
               android:text="Remove"
               android:layout_marginTop="40dp"
               android:layout_marginLeft="20dp"

               android:id="@+id/removeBtnId"
               />

       </LinearLayout>
   </LinearLayout>









</android.support.v7.widget.CardView>