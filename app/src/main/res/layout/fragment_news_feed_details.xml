<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/donationPlaceHolder"
    tools:context=".NewsFeedDetails">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollViewId"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="100dp"
                android:layout_height="105dp"
                android:id="@+id/details_vImage"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/ic_launcher"
                />
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ProgressBar
                    android:id="@+id/amountProgress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:indeterminate="false"
                    android:max="100"
                    android:minHeight="20dp"
                    android:minWidth="250dp"
                    android:progress="1"
                    android:layout_gravity="center_horizontal"

                    />
              <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_gravity="center_horizontal"
                  >
                  <TextView

                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text=""
                      android:id="@+id/donatedAmountIdTV"
                      android:textStyle="bold"
                      />

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="/"
                      android:layout_marginLeft="3dp"
                      android:textStyle="bold"
                      />
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="5000tk"
                      android:textStyle="bold"
                      android:id="@+id/totalAMountid"
                      />
              </LinearLayout>


            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0%"
                android:layout_gravity="center_horizontal"
                android:id="@+id/percentageId"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textStyle="bold"
                android:textColor="#136904"
                android:text="Donate Now!"
                android:background="#709de1"
                android:id="@+id/DonateNoWIdNFD"

                />
            <LinearLayout
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name:"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name WillbeHere"
                    android:id="@+id/details_vname"
                    android:textStyle="bold"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Details:"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="4"
                    android:minLines="2"
                    android:id="@+id/details_vDetails"
                    android:text="details will be here   dksfskjdfl sldf sld flsjf  sdlkjflskdjfsskldjfsldf s
 fsdjflksjdfs WillbeHere"

                    />
            </LinearLayout>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Necessary Documents :"
                android:textStyle="bold"
                />
            <ImageView
                android:layout_width="350dp"
                android:layout_height="400dp"
                android:id="@+id/documetn1Id"
                android:src="@drawable/image"
                android:scaleType="fitXY"
                android:layout_gravity="center_horizontal"

                />

            <ImageView
                android:layout_marginTop="8dp"
                android:layout_width="350dp"
                android:layout_height="400dp"
                android:id="@+id/documetn2Id"
                android:src="@drawable/diag"
                android:scaleType="fitXY"
                android:layout_gravity="center_horizontal"

                />

            <ImageView
                android:layout_marginTop="8dp"
                android:layout_width="350dp"
                android:layout_height="400dp"
                android:id="@+id/documetn3Id"
                android:scaleType="fitXY"
                android:src="@drawable/maxresdefault"
                android:layout_gravity="center_horizontal"

                />



        </LinearLayout>

    </ScrollView>




</FrameLayout>