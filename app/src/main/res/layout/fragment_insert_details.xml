<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/insertDetailsFragmentHolder"
    tools:context=".InsertDetailsFragment">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:id="@+id/insertLinearid"
       >
       <ImageView
           android:layout_width="150dp"
           android:layout_height="130dp"
           android:layout_gravity="center_horizontal"
           android:id="@+id/patientImage"
           android:scaleType="fitXY"
           />
       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Victims Photo"
           android:textAllCaps="false"
           android:layout_gravity="center_horizontal"
           android:id="@+id/chooseImageId"
           />
       <EditText
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:hint="victims name...."
           android:textAlignment="center"
           android:id="@+id/vic_nameId"
           />
       <EditText
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/diseaseNameId"
           android:hint="Disease"
           android:textAlignment="center"
           />
       <EditText
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:hint="Contact No"
           android:textAlignment="center"
           android:id="@+id/vic_contactNo"
           />
         <EditText
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:hint="Needed amount"
           android:textAlignment="center"
           android:id="@+id/neededAmountId"
           />

       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Insert Necessary Documents "
           android:textAllCaps="false"
           android:layout_gravity="center_horizontal"
           android:id="@+id/insertDocumentsId"
           />
       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Save"
           android:id="@+id/saveButtonId"
           android:layout_gravity="end"
           />
       <Button
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Donation Methods"
           android:textAllCaps="false"
           android:layout_marginTop="10dp"
           android:id="@+id/donationMethodsButton"
           />
   </LinearLayout>


</FrameLayout>